<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vsmwatchandroidapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VSMWatchAndroidApplication">
        <activity
            android:name=".ui.logging.TemperatureLog">
        </activity>
        <activity
            android:name=".ui.chart.TempActivity"
            android:screenOrientation="landscape"
            android:label="Temperature Graph">
        </activity>
        <activity
            android:name=".ui.chart.AccActivity"
            android:screenOrientation="landscape"
            android:label="Accelerometer Graph">
        </activity>
        <activity
            android:name=".ui.chart.EDAPhaseActivity"
            android:screenOrientation="landscape"
            android:label="EDA Phase Graph">
        </activity>
        <activity
            android:name=".ui.chart.EDAMagActivity"
            android:screenOrientation="landscape"
            android:label="EDA Magnitude Graph">
        </activity>
        <activity
            android:name=".ui.chart.ECGActivity"
            android:screenOrientation="landscape"
            android:label="ECG Graph">
        </activity>
        <activity
            android:name=".ui.chart.PPGActivity"
            android:screenOrientation="landscape"
            android:label="PPG Graph">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>